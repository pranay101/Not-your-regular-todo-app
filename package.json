{
  "name": "not-the-regular-todo-app",
  "version": "1.0.0",
  "description": "A feature-rich todo tracker with Pomodoro functionality",
  "main": "dist/main/main.js",
  "scripts": {
    "start": "concurrently \"npm run start:renderer\" \"npm run start:main\"",
    "start:main": "webpack --config webpack.main.config.js --watch",
    "start:renderer": "webpack serve --config webpack.config.js",
    "build": "webpack --config webpack.config.js && webpack --config webpack.main.config.js",
    "electron": "electron ./dist/main/main.js",
    "dev": "npm run build && npm run electron",
    "package": "npm run build && electron-builder build --win --publish never",
    "postinstall": "npx tailwindcss init -p"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/node": "^22.13.10",
    "@types/plist": "^3.0.5",
    "@types/react": "^19.0.10",
    "@types/react-dom": "^19.0.4",
    "autoprefixer": "^10.4.16",
    "concurrently": "^9.1.2",
    "css-loader": "^7.1.2",
    "electron": "^35.0.1",
    "electron-builder": "^25.1.8",
    "html-webpack-plugin": "^5.6.3",
    "nodemon": "^3.1.9",
    "postcss": "^8.4.31",
    "postcss-loader": "^8.1.1",
    "style-loader": "^4.0.0",
    "tailwindcss": "^3.3.5",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.2",
    "webpack": "^5.98.0",
    "webpack-cli": "^6.0.1",
    "webpack-dev-server": "^5.2.0"
  },
  "dependencies": {
    "chart.js": "^4.4.8",
    "date-fns": "^4.1.0",
    "electron-store": "^8.1.0",
    "react": "^19.0.0",
    "react-chartjs-2": "^5.3.0",
    "react-dom": "^19.0.0",
    "react-router-dom": "^7.3.0",
    "better-sqlite3": "^8.5.0",
    "sqlite": "^4.2.1",
    "sqlite3": "^5.1.6"
  }
}
